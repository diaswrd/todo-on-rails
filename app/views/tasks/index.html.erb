<h1>
    to<span class="red">do</span>
</h1>

<%= form_for :task do |t| %>
    <%= t.text_field :name, :placeholder => "what should be done?" %>
<% end %>

<ul>
    <% @tasks.each do |task| %>
        <li class="<%= task.done ? 'done' : '' %>">
            <%= link_to '&#10003;'.html_safe, action: 'mark_as_done', :id => task.id %>

            <span class="name"><%= task.name %></span>

            <%=
              link_to '&times;'.html_safe, task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure?' }
            %>
        </li>
    <% end %>
</ul>
